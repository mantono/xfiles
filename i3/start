#!/bin/bash

synclient MaxTapTime=0
synclient TapButton1=0
xcompmgr -n &
redshift -l 0:18 -b 1:0.7 -t 7000:3500 -m vidmode:screen=0 &
nm-applet &
xrdb ~/.Xresources &
xrandr | grep 'DP-1 connected' && xrandr --output DP-1 --primary --mode 3840x2160 --left-of eDP-1 || xrandr --output eDP-1 --primary
feh --bg-scale ~/.bg.png &
xinput --set-prop 22 "Device Accel Constant Deceleration" 0.65
